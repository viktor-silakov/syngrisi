<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="../../../static/imgs/new-logo6.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
          integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
          integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <link rel="stylesheet" href="../../../static/css/common.css">
    <link rel="stylesheet" href="../../../static/css/colors.css">

    <style>
        .snapshoot-image {
            width: 21em;
        }
    </style>

    <title>Suite: <%= suite.name %> Test: <%= test.name %> Checks name - <%= checks[0].name %></title>
</head>
<body>
<div class="container-fluid pl-3 pr-1">

    <div name="header" class="row bg-olive text-light ">
        <div name="logo-and-link" class="col-3 col-lg-3 w-25 pl-0 pb-1 bg-olive text-light"
             id="logo-and-label-container">
            <%- include('components/logo_and_link', {location: 'Groups of checks'}) %>
        </div>

        <div name="title" class="col pl-4 pt-1 h4 border-left mb-0">
            <a class="unlink" name="suite-link"
               href="/?filter_suitename_eq=<%= suite.name %>"><%= suite.name %></a>
            <span>/</span>
            <a class="unlink" name="check-link"
               href='/?filter_suitename_eq=<%= suite.name %>&unfoldTestId=<%= test.id %>'><%= test.name %></a>
            <span>/</span>
            <%= checks[0].name %></div>
    </div>

    <div name="rows" class="container mt-3">
        <% for(const check of checks) { %>
            <div class="row w-100 pb-3">
                <div class="col-auto">
                    <a href="/snapshootview?id=<%= check.baseline._id %>&diffid=<%= check.diff ? check.diff._id : '' %>" name="baseline_link">
                        <img src="/snapshoots/<%= check.baseline.filename || check.baseline._id + '.png' %>"
                             alt="baseline snapshoot"
                             title="baseline snapshoot"
                             class="snapshoot-image">
                    </a>
                </div>
                <div class="col-auto">
                    <% if (check.actualSnapshotId) { %>
                        <a href="/snapshootview?id=<%= check.actual._id %>&diffid=<%= check.diff ? check.diff._id : '' %>"
                           name="actual_link">
                            <img src="/snapshoots/<%= check.actual.filename || check.actual._id + '.png' %>"
                                 alt="actual snapshoot"
                                 title="actual snapshoot"
                                 class="snapshoot-image">
                        </a>
                    <% } %>
                </div>
                <div class="col-auto">
                    <% if (check.diff) { %>
                        <a href="/snapshootview?id=<%= check.diff._id %>">
                            <img src="/snapshoots/<%= check.diff.filename || check.diff._id + '.png' %>" alt="diff snapshoot"
                                 title="diff snapshoot"
                                 class="snapshoot-image">
                        </a>
                    <% } %>
                </div>
            </div>

        <% } %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
        integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>
<script>
</script>
</body>
</html>
