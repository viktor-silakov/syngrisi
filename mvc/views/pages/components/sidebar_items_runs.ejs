<% items.forEach(function(item){ %>
    <% const itemCount = testsCountsGroupByRunId[item.id] || 0 %>
    <% const failedItemCount = failedTestsCountsGroupByRunId[item.id] || 0%>
    <% if (itemCount > 0){ %>
        <div name="run-menu-item-container"
             class="flex-row pl-0 pb-1 w-100 btn-light border-silver mt-1 mr-0 row justify-content-around">
            <div class="flex-column pl-2 pr-1">
                <input name="run-item" class="small" type="checkbox" runid="<%= item.id %>"
                       id="run-checkbox-<%= item.id %>">
            </div>

            <div name="item-name" class="col-6 pr-0 pl-1 pb- text-truncate">
                <% let shortName = (item.name.split)('_')[0] %>
                <a href="?runName=<%= item.name %>" title="<%= item.name %>"
                   class="small text-dark"><%= shortName %></a>
            </div>

            <div name="item-date"
                 class="col text-truncate pr-1 pl-1 pt-0 ml-1 rounded text-right align-self-center">
                <div class="small d-inline bg-secondary silver rounded pl-1 pr-1 pt-1 pb-1" style="opacity: 70%">
                    <span class=""><%= item.formattedUpdatedDate %></span>
                </div>
            </div>

            <div name="item-count"
                 class="col-2 pl-1 pr-1 pt-0 text-truncate rounded text-left align-self-end">
                <div class="row justify-content-between">
                    <div class="col"></div>
                    <div class="col-auto">
                        <div class="small text-right d-flex align-items-end p- bg-sidebar silver rounded pl-1 pr-1 pt-0 pb-0 ">
                            <span><%= itemCount %></span>&nbsp;/&nbsp;<span
                                    class="text-danger"><%= failedItemCount %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
<% }); %>
