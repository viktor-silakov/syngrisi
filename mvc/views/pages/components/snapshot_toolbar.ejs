<!--COLLAPSE-->
<div class="col-auto border-right pl-1 pr-1" id="diff-toolbar-collapse">
    <a type="button"
       class="btn vcenter-item pl-0 pr-0 pt-0 pb-1 mb-0 border-0 rounded-0 dropdown-toggle-split "
       title="toggle toolbar"
       onclick="toggleSnapshotToolbarCollapse()"
    >
        <img src="../../../../static/icons/collapse.svg" alt="navigation button"
             id="snapshot-collapse-icon"
             style="width: 8px"
             class="">
    </a>
</div>
<div class="col-auto" id="snapshot-toolbar-buttons">
    <div class="row">
        <!--ZOOM IN-->
        <div class="col-auto pl-1 pr-1">
            <a name="zoom in" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-0 mb-1 border-0 rounded-0"
               title="zoom in"
               onclick=" baseline.resize(1.2)">
                <i class="fas fa-search-plus fa-1x  "></i>
            </a>
        </div>
        <!--ZOOM OUT-->
        <div class="col-auto pl-1 pr-1 border-right">
            <a name="zoom-out" type="button"
               title="zoom out"
               class="btn vcenter-item btn-check pl-1 pr-1 pt-0 mb-1 pb-0 rounded-0"
               onclick="baseline.resize(0.8)">
                <i class="fas fa-search-minus fa-1x"></i>
            </a>
        </div>
        <!--ADD IGNORE REGION-->
        <div class="col-auto pl-1 pr-1" style="margin-top: -2px;">
            <a name="ignore-regions" type="button"
               title="add ignore region (A)"
               class="btn vcenter-item btn-check pl-1 pr-1 pt-0 pb-0 vcenter-item"
               onclick="baseline.addIgnoreRegion( {name: 'ignore_rect', strokeWidth: 0,})">
                <img src="../../../../static/icons/region-icon.svg" alt="navigation button"
                     id="diff-toggle-region-icon"
                     class="">
            </a>
        </div>
        <!--ADD BOUND REGIONS-->
        <div class="col-auto pl-1 pr-1">
            <a name="bound-regions" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-0 mb-1 border-0 rounded-0"
               title="add bound regions"
               onclick="baseline.addBoundingRegion('bound_rect')"
            >
                <i class="fas fa-expand fa-1x"></i>
            </a>
        </div>
        <!--TOGGLE DIFF-->
        <% if (diffId) { %>
            <div class="col-auto pl-1 pr-1">
                <a name="toggle-diff" type="button"
                   title="toggle diff"
                   class="btn vcenter-item btn-check pl-1 pr-1 pt-0 pb-0"
                   style="margin-top: -2px;"
                   onclick="baseline.toggleDiff('<%= diffId %>')">
                    <i class="fas fa-exchange-alt fa-1x"></i>
                </a>
            </div>
        <% } %>
        <!--SAVE-->
        <div class="col-auto pl-1 pr-1 border-left">
            <a name="save-baseline" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-0 mb-1 border-0 rounded-0"
               title="save baseline"
               onclick="baseline.sendIgnoreRegions('<%= snapshot.id %>' ,baseline.getRectData())"
            >
                <i class="fas fa-save fa-1x"></i>
            </a>
        </div>
        <!--NAVIGATION-->
        <div class="col-auto pl-1 pr-1">
            <a type="button"
               class="btn vcenter-item pl-1 pr-1 pt-0 pb-0 mb-0 border-0 rounded-0 dropdown-toggle-split"
               title="open other views" data-toggle="dropdown" aria-haspopup="true"
               aria-expanded="true">
                <img src="../../../../static/icons/navigation-black.svg" alt="navigation button"
                     class="pb-1">
            </a>
            <div class="dropdown-menu mr-0 dropdown-menu-right" aria-labelledby="navigation"
                 style="z-index: 10000">

                <!--DROPDOWN ICON-->
                <a name="group view" type="button"
                   class="btn btn-check vcenter-item1 pl-3 pr-3 pt-0 pb-0 mb-0 border-0 rounded-0"
                   href="/snapshoots/<%= snapshot.filename ? snapshot.filename : (snapshot.id + '.png') %>"
                   title="Open screenshot">
                    <i class="far fa-file-image fa-1x"></i>
                    <span style="display: inline-block; margin-left: 3px">Open Screenshot</span>
                </a>
                <div class="dropdown-divider"></div>
            </div>
        </div>
    </div>
</div>
