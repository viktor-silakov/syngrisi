<div class="suites-toolbar row flex-row-reverse pr-4">
    <div class="col-auto pl-1 pr-1 pt-2">
        <a name="remove-tests" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
           title="delete suites and associated items" onclick="removeCheckedSuites()">
            <i class="fas fa-trash fa-sm"></i>
        </a>
    </div>
    <div class="col-auto pl-1 pr-1 pt-2">
        <a name="reload-tests" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
           onclick="location.reload()" title="reload page">
            <i class="fas fa-sync-alt fa-sm"></i>
        </a>
    </div>
    <div class="col-auto pl-1 pr-1 pt-2">
        <a name="check-all" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
           onclick="checkAllItems('suite-item')" title="check all suites">
            <input id="check-sidebar-items" type="checkbox" style="margin-top: 6px">
        </a>
    </div>
</div>
