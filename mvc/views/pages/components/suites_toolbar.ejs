<div class="suites-toolbar d-flex flex-row ml-1 pl-1 pr-3 mb-0">
    <div class="col-auto pl-1 pr-1 pt-1">
        <a name="check-all" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
           onclick="checkAllItems('suite-item');" title="check all suites">
            <input id="check-sidebar-items" type="checkbox" style="margin-top: 7px">
        </a>
    </div>
    <div class="col-10 pl-1 pr-1 align-content-start pt-1 justify-content-start"
         style="font-weight: 400">
        Suites
    </div>
    <div class="col-auto pl-1 pr-1 pt-1 justify-content-end">
        <a name="remove-suites" type="button" id="remove-suite-button"
           class="btn mass-suites-actions btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
           title="delete suites and associated items" onclick="removeCheckedSuites('suite-item', 'mass-suites-actions')">
            <i class="tests-toolbar-icons bi bi-trash"></i>
        </a>
    </div>
</div>
