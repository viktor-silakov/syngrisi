<!--COLLAPSE-->
<div class="col-auto border-right pl-1 pr-1" id="diff-toolbar-collapse">
    <a type="button"
       class="btn vcenter-item pl-0 pr-0 pt-0 pb-1 mb-0 border-0 rounded-0 dropdown-toggle-split"
       title="toggle toolbar"
       onclick="toggleDiffToolbarCollapse()"
    >
        <img src="../../../../static/icons/collapse.svg" alt="navigation button"
             id="diff-collapse-icon"
             style="width: 8px"
             class="">
    </a>
</div>
<div class="col-auto" id="diff-toolbar-buttons">
    <div class="row">
        <!--ZOOM IN-->
        <div class="col-auto pl-1 pr-1">
            <a name="zoom in" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-0 mb-1 border-0 rounded-0"
               title="zoom in"
               onclick="resizeSnapshoot(1.2)">
                <i class="fas fa-search-plus fa-1x  "></i>
            </a>
        </div>
        <!--ZOOM OUT-->
        <div class="col-auto pl-1 pr-1">
            <a name="zoom-out" type="button"
               title="zoom out"
               class="btn btn-check pl-1 pr-1 pt-0 mb-1 pb-0 border-0 rounded-0"
               onclick="resizeSnapshoot(0.8)">
                <i class="fas fa-search-minus fa-1x"></i>
            </a>
        </div>
        <!--TOGGLE REGIONS-->
        <div class="col-auto pl-1 pr-1">
            <a name="show-overlay" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-0 mb-1 border-0 rounded-0"
               title="toggle regions (left mouse click)"
               onclick="toggleReqions()">
                <img src="../../../../static/icons/region-icon.svg" alt="navigation button"
                     id="diff-toggle-region-icon"
                     class="">
            </a>
        </div>
        <!--TOGGLE SNAPSHOT SIDE TO SIDE COMPARISON-->
        <div class="col-auto pl-1 pr-1">
            <% if(actual_snapshoot) { %>
                <a name="show-diff" type="button"
                   class="btn btn-check vcenter-item pb-1 pl-1 pr-1 pt-0 mb-0 border-0 rounded-0"
                   title="toggle snapshot side ti side comparison (left mouse click)"
                   onclick="toggleDiffOpacity()">
                    <img src="../../../../static/icons/diff-icon.svg" alt="navigation button"
                         id="diff-compare-icon"
                         class="">
                </a>
            <% } %>
        </div>
        <!--ACCEPT CHECK-->
        <div class="col-auto pl-1 pr-1">
            <a name="accept-baseline" type="button"
               class="btn btn-check vcenter-item pl-1 pr-1 pt-0 pb-1 mb-0 border-0 rounded-0"
               onclick="acceptAndRedirect('<%= check.id %>', '<%= actual_snapshoot._id %>', '<%= expected_snapshoot._id %>', '<%= diff_snapshoot.id %>', '<%= test._id %>', false);"
               title="accept the actual snapshoot as baseline">
                <% const iconColor = (actual_snapshoot._id.toString() == expected_snapshoot._id.toString()) ? 'olive' : 'text-dark' %>
                <i class="fas fa-check <%= iconColor %> fa-1x"></i>
            </a>
        </div>
        <!--NAVIGATION-->
        <div class="col-auto pl-1 pr-1">
            <!--DROPDOWN ICON-->
            <a type="button"
               class="btn vcenter-item pl-1 pr-1 pt-0 pb-0 mb-0 border-0 rounded-0 dropdown-toggle-split"
               title="open other views" data-toggle="dropdown" aria-haspopup="true"
               aria-expanded="true">
                <img src="../../../../static/icons/navigation-black.svg" alt="navigation button"
                     class="pb-1">
            </a>
            <div class="dropdown-menu mr-0 dropdown-menu-right" aria-labelledby="navigation"
                 style="z-index: 10000">

                <!--DROPDOWN ITEMS-->
                <a name="group view" type="button"
                   class="btn btn-check vcenter-item pl-3 pr-1 pt-0 pb-0 mb-0 border-0 rounded-0"
                   onclick="window.location.href = '/checksgroupview?id=<%= check.id %>'"
                   title="Group view (checks with same idents in the same session)">
                    <img src="../../../../static/icons/group-view.svg" alt="group view"
                         class="pt-1 pr-1">
                    <span style="display: inline-block; margin-left: 3px">Group View</span>
                </a>
                <div class="dropdown-divider"></div>

                <a class="dropdown-item text-center" style="font-size: 90%;"
                   href="/snapshootview?id=<%= expected_snapshoot.id %>&diffid=<%= diff_snapshoot.id %>"
                >Baseline</a>
                <a href="/snapshootview?id=<%= expected_snapshoot.id %>&diffid=<%= diff_snapshoot.id %>"
                   title="baseline snapshoot">
                    <img class="w-100 preview"
                         src="/snapshoots/<%= expected_snapshoot.filename ? expected_snapshoot.filename : expected_snapshoot.id + '.png' %>"
                         alt="baseline">
                </a>
                <% if(actual_snapshoot) { %>
                    <a class="dropdown-item text-center" style="font-size: 90%;"
                       href="/snapshootview?id=<%= actual_snapshoot.id %>&diffid=<%= diff_snapshoot.id %>"
                    >Actual</a>
                    <a href="/snapshootview?id=<%= actual_snapshoot.id %>&diffid=<%= diff_snapshoot.id %>"
                       title="actual snapshoot">
                        <img class="w-100 preview"
                             src="/snapshoots/<%= actual_snapshoot.filename ? actual_snapshoot.filename : actual_snapshoot.id + '.png' %>"
                             alt="actual">
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>
