<div name="subheader" class="row sticky-top bg-light text-dark border--gray pt-0 pb-3 mr-1 ml-0">
    <div class="col text-truncate pt-2" style="font-size: 14pt">
        <% if(currentItem) { %>

            <a href="?filter_suitename_eq=<%= currentItem.name; %>" class="unlink">
                <span><%= currentItem.name; %></span>
            </a>
        <% } else if (opts.filter_name_regex) { %>
            <a href="/" class="unlink text-secondary pr-1"><i class="bi bi-x-lg"></i></a>
            <span>Search results for <b> <%= opts.filter_name_regex %> </b></span>
            <script>
                setTimeout(()=>{
                    higlightSearshResult('<%= opts.filter_name_regex %>');
                }, 1000)
            </script>
            <script>
                toggleSidebar();
                document.getElementById('subheader-search').value = '<%= opts.filter_name_regex %>';
            </script>
        <% }else{ %>
            <a href="/" class="unlink">
                <span>All tests</span>
            </a>
        <% } %>
    </div>
    <div class="col">
        <div class="tests-toolbar row flex-row justify-content-end pr-0">
            <div class="col-auto pl-1 pr-1 pt-2">
                <a name="accept-checks" type="button"
                   class="mass-tests-actions btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
                   onclick="acceptTests()"
                   id="mass-test-accept-button"
                   title="accept selected checks">
                    <i class="far fa-check-circle fa-sm"></i>
                </a>
            </div>
            <div class="col-auto pl-1 pr-1 pt-2">
                <a name="remove-tests" type="button"
                   class="mass-tests-actions btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
                   id="mass-test-remove-button"
                   onclick="removeTests()"
                   title="remove checked tests">
                    <i class="fas fa-trash fa-sm"></i>
                </a>
            </div>
            <div class="col-auto pl-1 pr-1 pt-2">
                <a name="colorize-tests" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
                   onclick="colorizeRuns()"
                   title="mark different runs with different random colors">
                    <i class="fas fa-paint-brush fa-sm"></i>
                </a>
            </div>
            <div class="col-auto pl-1 pr-1 pt-2">
                <a name="reload-tests" type="button" class="btn btn-secondary bg-light border-0 pr-1 pl-1 pt-0 pb-1"
                   onclick="location.reload()"
                   title="reload page">
                    <i class="fas fa-sync-alt fa-sm"></i>
                </a>
            </div>
        </div>
    </div>
</div>



