<div class="btn-group1 header-dropdown">
    <a type="button" name="user-icon"
       class="btn btn-secondary border border-dark btn-circle btn-md bg-light text-dark border-0 font-weight-bold pr-0 pl-0"
       id="user-icon" data-toggle="dropdown"
       aria-haspopup="true" data-display="static" aria-expanded="false"
       data-reference="parent"> <%= user.firstName[0] %><%= user.lastName[0] %>
    </a>
    <% var disableAdmin = (user.role === 'admin') ? '' : 'disabled' %>
    <% var adminLink = (user.role === 'admin') ? '/admin?task=users' : '#' %>
    <div class="dropdown-menu header-dropdown mr-0 dropdown-menu-right" aria-labelledby="dropdownMenuReference">
        <div class="row pl-1">
            <div class="col text-secondary1 ml-4 pl-1">
                <small>
                    <p class="text-muted mb-1">Signed in as </p>
                    <p class="mb-1"><b><%= user.firstName %></b> <b><%= user.lastName %></b></p>
                </small>
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" style="font-size: 80%" href="/userinfo">User Details</a>
        <a id="admin-panel-link" class="dropdown-item <%= disableAdmin %>"  style="font-size: 80%"href="<%=adminLink%>">Admin Panel</a>
        <a class="dropdown-item" style="font-size: 80%"  href="/auth/change">Change Password</a>
        <a class="dropdown-item" id="generate-api" style="font-size: 80%"  href="javascript:void(0)" onclick="generateApiKey()">Generate API key</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" style="font-size: 80%" href="/auth/logout">Sign Out</a>
    </div>
</div>
